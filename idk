#include <iostream>
using namespace std;
int main()
{
    int n;
    cout <<"Podaj liczbe ocen\n";
    cin >>n;
    int tab[n];
    float suma=0;
    for (int i=0;i<n;i++)
    {
   cout <<"Podaj "<<i+1<< " ocene\n";
   cin >>tab[i];
   suma += tab[i];
    }
    cout<<"Twoja srednia to "<<suma/n;
    return 0;
}   
